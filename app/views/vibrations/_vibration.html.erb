<%= turbo_frame_tag dom_id(vibration_presenter.vibration) do %>
  <div class="vibration d-flex py-3 px-3">
    <div class="flex-shrink-0">
      <%= image_tag vibration_presenter.avatar, size: "48x48", class: "rounded-circle" %>
    </div>
    <div class="flex-grow-1 ms-3">
      <p class="mb-0">
        <span class="fw-bolder"><%= vibration_presenter.display_name %></span>
        <span class="text-muted">
          @<%= vibration_presenter.username %> Â· <%= vibration_presenter.created_at %></span>
      </p>
      <p><%= vibration_presenter.body %></p>

      <div class="d-flex justify-content-between align-items-center action-links">
        <div class="align-items-center">
          <%= link_to "#", class: "text-decoration-none text-black views" do %>
            <%= image_tag "bar-graph.png", size: "20x20", class: "me-1" %>
            <span>Views</span>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black replies" do %>
            <%= image_tag "speech-bubble.png", size: "20x20", class: "me-1" %>
            <span>Replies</span>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black revibrations" do %>
            <%= image_tag "revibration.png", size: "20x20", class: "me-1" %>
            <span>Revibrations</span>
          <% end %>
        </div>
        <div>
          <% if vibration_presenter.likes.include?(current_user.likes.find_by(vibration: vibration_presenter.vibration)) %>
            <%= link_to vibration_like_path(vibration_presenter.vibration, vibration_presenter.vibration.likes.find_by(user: current_user)), data: { "turbo-method": "delete" }, class: "text-decoration-none text-black likes" do %>
              <%= image_tag "heart-filled.png", size: "20x20", class: "me-1" %>
              <span><%= vibration_presenter.likes.size %></span>
            <% end %>
          <% else %>
            <%= link_to vibration_likes_path(vibration_presenter.vibration), data: { "turbo-method": "post" }, class: "text-decoration-none text-black likes" do %>
              <%= image_tag "heart-unfilled.png", size: "20x20", class: "me-1" %>
              <span><%= vibration_presenter.likes.size %></span>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black bookmark" do %>
            <%= image_tag "bookmark.png", size: "20x20", class: "me-1" %>
            <span>Bookmark</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
