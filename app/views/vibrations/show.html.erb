<div class="col-7">
  <div class="mb-3">
    <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
      <%= image_tag "back-arrow.png", size: "28x28", class: "me-4" %>
      <span style="position: relative; top: 2px;">Vibration</span>
    <% end %>

    <div data-vibration-path="<%= vibration_path(@vibration_presenter.vibration) %>" class="vibration d-flex py-3 px-3">
      <div class="flex-shrink-0">
        <%= image_tag @vibration_presenter.avatar, size: "48x48", class: "rounded-circle" %>
      </div>
      <div class="flex-grow-1 ms-3">
        <p class="fw-bolder mb-0"><%= @vibration_presenter.display_name %></p>
        <p class="text-muted mb-1">@<%= @vibration_presenter.username %></p>
        <%= @vibration_presenter.body_html(p_class: "fs-2 mb-1").html_safe %>
        <p class="text-muted"><%= @vibration_presenter.vibration.created_at.strftime("%l:%M %p") %> Â· <%= @vibration_presenter.vibration.created_at.strftime("%b %d, %Y") %></p>

        <%= render "show_stats", vibration_presenter: @vibration_presenter %>
      </div>
    </div>
  </div>

  <%= render "shared/vibration_form", form_submit_path: vibration_reply_vibrations_path(@vibration_presenter.vibration), button_label: "Reply" %>

  <div id="reply_vibrations">
    <%= render partial: "vibrations/vibration", collection: @reply_vibrations_in_presenter, as: :vibration_presenter %>
  </div>
</div>
<div class="col">
  Column
</div>
